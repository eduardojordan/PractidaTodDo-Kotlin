<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:minHeight="300dp"
                                                   android:id="@+id/text">

    <TextView
            android:text="TextView"
            android:layout_width="310dp"
            android:layout_height="24dp"
            android:id="@+id/textContent"
            android:maxLines="3"
            android:ellipsize="end"
            tools:layout_editor_absoluteX="12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            tools:text="Tarea de Ejemplo"
            android:textAppearance="@style/TaskContent"/>

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkIsDone2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textContent"
            android:layout_marginStart="16dp"
            android:checked="false"/>

    <TextView
            android:text="TextView"
            android:layout_width="306dp"
            android:layout_height="206dp"
            android:id="@+id/textDetail"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textContent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/checkIsDone2"
            android:layout_marginEnd="16dp"
            tools:text="Texto en detalle de la tarea anotada como principal, contien una descripcion mas amplia de la misma"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TaskDetail"/>
</androidx.constraintlayout.widget.ConstraintLayout>